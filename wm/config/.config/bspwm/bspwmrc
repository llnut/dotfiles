#!/bin/sh

# ##############################################################################
# #                                  ENV VARS                                  # 
# ##############################################################################

# export BROWSER=forefix-developer-edition

pgrep -x sxhkd > /dev/null || sxhkd &

# ##############################################################################
# #                                  FUNCTIONS                                 # 
# ##############################################################################

# Credits to 6gk/polka
rule() { bspc rule -a "$@" & }
config() { bspc config "$@" & }

# ##############################################################################
# #                                AUTOSTART APPS                              #
# ##############################################################################

# Autostart Apps
dunst --config $HOME/.config/dunst/dunstrc &
$HOME/.local/bin/eww daemon &
picom --config $HOME/.config/picom/picom.conf &
fcitx -d &

# Start polkit agent
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# Set wallpaper
hsetroot -fill "$HOME/Pictures/Wallpapers/gruvbox_waterfall_ig.png"

# Start polybar
sh $HOME/.config/polybar/launch.sh

# I hate mouse drift.
# xset mouse 2.5 0

# ##############################################################################
# #                                 WINDOW RULES                               #
# ##############################################################################

rule Vivaldi-stable                 desktop=^1
rule discord                        desktop=^2
rule Code                           desktop=^3

# ##############################################################################
# #                            GENERAL CONFIGURATION                           #
# ##############################################################################

bspc monitor -d I II III IV V VI

config pointer_modifier             Mod4

config border_width                 1
config window_gap                   0

config top_padding                  35
config bottom_padding               0

config split_ratio                  0.62
config borderless_monocle           true
config gapless_monocle              true

# Yes, this is stolen from gk.
outer='0x1d2021'   # outer
inner1='0x32302f'  # focused
inner2='0x282828'  # normal

targets() {
 	case $1 in
		focused) bspc query -N -n .local.focused.\!fullscreen;;
		normal)  bspc query -N -n .local.\!focused.\!fullscreen
	esac | grep -iv "$v"
}

draw() { chwb2 -I "$inner" -O "$outer" -i "4" -o "9" $* |:; }

initial draw, and then subscribe to events
{ echo; bspc subscribe node_geometry node_focus; } |
 	while read -r _; do
		[ "$v" ] || v='abcdefg'
		inner=$inner1 draw "$(targets focused)"
		inner=$inner2 draw "$(targets normal)"
    done
