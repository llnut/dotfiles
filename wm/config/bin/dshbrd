#!/bin/bash
# Opens eww dashboard

LOCK_FILE="$HOME/.cache/eww.lock"
EWW_BIN="$HOME/.local/bin/eww"

run() {
    #bspc config right_padding 360

    ${EWW_BIN} open-many \
        outer-window \
        dash-window \
        profile \
        date \
        line \
        system-manager \
        layout-manager 
}

# Run eww daemon if not running
if [[ ! `pidof eww` ]]; then
    ${EWW_BIN} daemon
    sleep 1
fi

# Open widgets
if [[ ! -f "$LOCK_FILE" ]]; then
    touch "$LOCK_FILE"
    run
else
    bspc config right_padding 0
    ${EWW_BIN} close-all
    rm "$LOCK_FILE"
fi
